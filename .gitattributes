# Auto detect text files and perform LF normalization
* text=auto

# JS and TS files must always use LF for tools to work
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# CSS files must always use LF for tools to work
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# HTML and markdown files must always use LF for tools to work
*.html text eol=lf
*.md text eol=lf

# Enforce bash scripts to always use LF
*.sh text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary
*.mp4 binary
*.webm binary
*.mp3 binary
*.svg text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
